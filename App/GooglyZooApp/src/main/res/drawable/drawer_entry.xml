<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="400" android:exitFadeDuration="200">
    <item android:state_activated="true" android:state_pressed="true" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/translucent_white" />
        </shape>
    </item>
    <item android:state_activated="false" android:state_pressed="true" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_grey" />
        </shape>
    </item>
    <item android:state_activated="true" android:state_pressed="false" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_grey" />
        </shape>
    </item>
    <item android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_black" />
        </shape>
    </item>
</selector>