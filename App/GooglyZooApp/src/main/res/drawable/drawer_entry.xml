        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_black"/>
        </shape>
    </item>
    <item android:state_activated="true" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_black"/>
        </shape>
    </item>
    <item android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_grey"/>
        </shape>
    </item>
</selector>