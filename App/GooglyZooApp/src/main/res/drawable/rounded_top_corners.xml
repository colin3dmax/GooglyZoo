<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="400" android:exitFadeDuration="200">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/round_button_pressed"/>
            <corners android:radius="5dp"
                     android:bottomRightRadius="0dp"
                     android:bottomLeftRadius="0dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/round_button_main"/>
            <corners android:radius="5dp"
                     android:bottomRightRadius="0dp"
                     android:bottomLeftRadius="0dp"/>
        </shape>
    </item>
</selector>