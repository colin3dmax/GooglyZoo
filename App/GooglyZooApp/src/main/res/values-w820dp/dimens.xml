     https://developer.android.com/design/patterns/navigation-drawer.html -->
    <dimen name="navigation_drawer_width">320dp</dimen>
    <dimen name="navigation_drawer_entry_height">64dp</dimen>
    <dimen name="navigation_drawer_entry_margin">10dp</dimen>
    <dimen name="navigation_drawer_list_divider_height">64dp</dimen>
    <dimen name="navigation_drawer_list_horizontal_padding">64dp</dimen>
    <dimen name="navigation_drawer_list_vertical_padding">64dp</dimen>
