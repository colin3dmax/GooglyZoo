<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:popupMenuStyle">@style/GooglyPopupMenu</item>
        <item name="android:actionBarStyle">@style/GooglyActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarWidgetTheme">@style/GooglyActionBarWidget</item>
    </style>

    <style name="GooglyActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/transparent_black</item>
    </style>

    <style name="GooglyPopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/transparent_black</item>
    </style>


    <style name="GooglyActionBarWidget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/GooglyPopupMenu</item>
    </style>

    <!-- Support theme !-->
    <style name="SupportTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/SupportTheme.ActionBarStyle</item>
    </style>
    <style name="SupportTheme.ActionBarStyle" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/holo_brown</item>
    </style>
</resources>
